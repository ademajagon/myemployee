datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Employee {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  birthdate DateTime
  jobTitle  String
  startDate DateTime
  photo     String
  addresses Address[]
}

model Address {
  id         Int      @id @default(autoincrement())
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId Int
  type       String
  street     String
  city       String
  state      String
  postalCode String
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      Role     @default(employee)
}

enum Role {
  admin
  employee
}
